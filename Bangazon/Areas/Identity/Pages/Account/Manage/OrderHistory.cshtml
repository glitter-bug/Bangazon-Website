@page
@model Bangazon.Areas.Identity.Pages.Account.Manage.OrderHistoryModel
@{
    ViewData["Title"] = "Order History";
    ViewData["ActivePage"] = ManageNavPages.OrderHistory;
}

    <div class="text-center">
        <h1>Order History</h1>
    </div>

<table class="table">
    <thead>
        <tr>
            <th>
               Date Created
            </th>
            <th>
                Date Completed
            </th>
            <th>
                Payment Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCompleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentType.AccountNumber)
                </td>
                <td>
                    <a class="nav-link @ManageNavPages.OrderDetailsNavClass(ViewContext)" id="order-details" asp-page="./OrderDetails" asp-route-id="@item.OrderId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>