@model Bangazon.Models.Product

@{
    ViewData["Title"] = "Restock";
}

<h1>Restock</h1>

<h4>Product</h4>
<hr />
<div>
    @if (Model.ImagePath != null)
    {
        <dl>
            <dt class="col-lg-2">
                @Html.DisplayNameFor(model => model.ImagePath)
            </dt>
            <dd>
                <img width="200" height="200" src="~/@Html.DisplayFor(model => model.ImagePath)">
            </dd>
        </dl>
    }
</div>
<div>
    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Restock">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" readonly/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">                  
                    <input type="hidden" asp-for="Price" class="form-control" />                   
                </div>
                <div class="form-group">
                    <label @*asp-for="Quantity"*@ class="control-label">Total Quantity Desired</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">                  
                    <input type="hidden" asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></input>                    
                </div>
                <div class="form-group form-check">
                        <input type="hidden" class="form-check-input" asp-for="LocalDelivery" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="City" class="form-control" />
                </div>
                <div class="form-group">                    
                    <input type="hidden" asp-for="ImagePath" class="form-control" />                   
                </div>
                <div class="form-group form-check">
                        <input type="hidden" class="form-check-input" asp-for="Active" />
                </div>
                <div class="form-group">                    
                    <input type="hidden" asp-for="ProductTypeId" class="form-control" asp-items="ViewBag.ProductTypeId"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
