@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dr class="row">
        <dr class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dr>
        <dr class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dr>
        <dr class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCompleted)
        </dr>
        <dr class="col-sm-10">
            @Html.DisplayFor(model => model.DateCompleted)
        </dr>
        <dr class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dr>
        <dr class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dr>
        <dr class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentType)
        </dr>
        <dr class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentType.AccountNumber)
        </dr>

    </dr>
</div>
<p>ORDERS</p>
@foreach (var item in Model.OrderProducts)
{
<dr class="col-sm-2">
    <dr>
        @Html.DisplayFor(modelItem => item.Product.Title)
    </dr>
    <dr>
        @Html.DisplayFor(modelItem => item.Product.Description)
    </dr>
</dr>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
